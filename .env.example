# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/internet_providers

# Session Configuration
# Generate a strong secret: openssl rand -base64 32
SESSION_SECRET=your-strong-session-secret-here

# API Keys
# Geocoding API (optional - uses free services by default)
GEOCODING_API_KEY=your-geocoding-api-key

# AI Service Configuration (optional)
AI_API_KEY=your-ai-api-key

# Mapbox Configuration
# Get your tokens from https://www.mapbox.com/
MAPBOX_API_KEY=your-mapbox-secret-key
VITE_MAPBOX_TOKEN=your-mapbox-public-token

# Excel Import Configuration
SKIP_EXCEL_IMPORT=false

# Security Headers
CORS_ORIGIN=http://localhost:3000
SECURE_COOKIES=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# File Upload Limits
MAX_FILE_SIZE=10485760

# Optional: External Services
